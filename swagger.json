{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Login",
    "version": "1.0.0",
    "description": "API para registro e login de usuários com autenticação via Bearer Token."
  },
  "paths": {
    "/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário registrado com sucesso." },
          "400": { "description": "Erro de validação ou usuário já existe." }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login bem-sucedido, retorna token." },
          "400": { "description": "Erro de validação ou credenciais inválidas." }
        }
      }
    },
    "/profile": {
      "get": {
        "summary": "Perfil do usuário (protegido)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Dados do perfil do usuário." },
          "401": { "description": "Token ausente ou inválido." }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
